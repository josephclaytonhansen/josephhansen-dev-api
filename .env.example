# Environment Configuration
PORT=9640

# SMTP Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password
FORWARD_TO_EMAIL=your-personal@email.com

# Authentication
SESSION_SECRET=your-very-secure-random-session-secret-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$example.hash.here
# Generate this with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"

# Application
NODE_ENV=development
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp